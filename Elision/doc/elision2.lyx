e> (%A.%I).%(3,%AI(3),3)
\end_layout

\begin_layout Plain Layout

$repl14 = %AI(3)
\end_layout

\begin_layout Plain Layout

e> %A.%I(3,%I(3),3)
\end_layout

\begin_layout Plain Layout

$repl15 = %AI(3, %I(3))
\end_layout

\begin_layout Plain Layout

e> %A.%I(3,%AI(3),3)
\end_layout

