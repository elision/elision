\end_layout

\begin_layout Plain Layout

$repl11 = %AC
\end_layout

\begin_layout Plain Layout

e> %A.%!AC
\end_layout

\begin_layout Plain Layout

$repl12 = %AC
\end_layout

\begin_layout Plain Layout

e> %AD[0].%CD[2]
\end_layout

\begin_layout Plain Layout

$repl13 = %ACD[0]
\end_layout

